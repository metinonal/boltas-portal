<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Kontrol Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
    <meta content="Coderthemes" name="author">

    <%- include("partials/css") %>

</head>

<body class="loading" data-layout-color="light" data-leftbar-theme="dark" data-layout-mode="fluid"
    data-rightbar-onstart="true">
    <!-- Begin page -->
    <div class="wrapper">
        <!-- ========== Left Sidebar Start ========== -->
        <div class="leftside-menu">

            <!-- LOGO -->
            <%- include("partials/logo") %>

            <div class="h-100" id="leftside-menu-container" data-simplebar="">

                <!--- Sidemenu -->
                <%- include("partials/sidemenu") %>
                    <!-- End Sidebar -->

                    <div class="clearfix"></div>

            </div>
            <!-- Sidebar -left -->

        </div>
        <!-- Left Sidebar End -->

        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">
                <!-- Topbar Start -->
                <%- include("partials/topbar") %>
                    <!-- end Topbar -->

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <h4 class="page-title">Boltas Portal Admin Paneli</h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <!-- Ana Sayfa Ayarları -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="header-title">Ana Sayfa Bölüm Ayarları</h4>
                                        <p class="text-muted mb-0">Ana sayfadaki bölümleri aktif/pasif edebilirsiniz.</p>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="card border">
                                                    <div class="card-body text-center">
                                                        <i class="mdi mdi-cake-variant text-primary" style="font-size: 2rem;"></i>
                                                        <h5 class="mt-2">Doğum Günü Bölümü</h5>
                                                        <p class="text-muted">Çalışanların doğum günlerini göster</p>
                                                        <div class="form-check form-switch d-flex justify-content-center">
                                                            <input class="form-check-input setting-switch" 
                                                                   type="checkbox" 
                                                                   id="birthdaySection" 
                                                                   data-setting="show_birthdays"
                                                                   <%= (settings && settings.show_birthdays !== false) ? 'checked' : '' %>>
                                                            <label class="form-check-label ms-2" for="birthdaySection">
                                                                <span class="status-text">
                                                                    <%= (settings && settings.show_birthdays !== false) ? 'Aktif' : 'Pasif' %>
                                                                </span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <div class="card border">
                                                    <div class="card-body text-center">
                                                        <i class="mdi mdi-account-plus text-success" style="font-size: 2rem;"></i>
                                                        <h5 class="mt-2">İşe Girenler Bölümü</h5>
                                                        <p class="text-muted">Yeni başlayan çalışanları göster</p>
                                                        <div class="form-check form-switch d-flex justify-content-center">
                                                            <input class="form-check-input setting-switch" 
                                                                   type="checkbox" 
                                                                   id="newHiresSection" 
                                                                   data-setting="show_new_hires"
                                                                   <%= (settings && settings.show_new_hires !== false) ? 'checked' : '' %>>
                                                            <label class="form-check-label ms-2" for="newHiresSection">
                                                                <span class="status-text">
                                                                    <%= (settings && settings.show_new_hires !== false) ? 'Aktif' : 'Pasif' %>
                                                                </span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <div class="card border">
                                                    <div class="card-body text-center">
                                                        <i class="mdi mdi-account-minus text-danger" style="font-size: 2rem;"></i>
                                                        <h5 class="mt-2">İşten Çıkanlar Bölümü</h5>
                                                        <p class="text-muted">Ayrılan çalışanları göster</p>
                                                        <div class="form-check form-switch d-flex justify-content-center">
                                                            <input class="form-check-input setting-switch" 
                                                                   type="checkbox" 
                                                                   id="leaversSection" 
                                                                   data-setting="show_leavers"
                                                                   <%= (settings && settings.show_leavers !== false) ? 'checked' : '' %>>
                                                            <label class="form-check-label ms-2" for="leaversSection">
                                                                <span class="status-text">
                                                                    <%= (settings && settings.show_leavers !== false) ? 'Aktif' : 'Pasif' %>
                                                                </span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- end row -->

                        <!-- end row -->
                    </div>
                     <!-- container -->

            </div> <!-- content -->

            <!-- Footer Start -->
            <%- include("partials/footer") %>
            <!-- end Footer -->

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->


    </div>
    <!-- END wrapper -->

    <%- include("partials/scripts") %>

    <script>
        $(document).ready(function() {
            // Ayar değişikliklerini dinle
            $('.setting-switch').change(function() {
                const settingKey = $(this).data('setting');
                const isActive = $(this).is(':checked');
                const statusText = $(this).siblings('label').find('.status-text');
                
                // UI'yi hemen güncelle
                statusText.text(isActive ? 'Aktif' : 'Pasif');
                
                // AJAX ile ayarı kaydet
                $.ajax({
                    url: '/ikyonetim/ayar-guncelle',
                    method: 'POST',
                    data: {
                        key: settingKey,
                        value: isActive
                    },
                    success: function(response) {
                        if (response.success) {
                            // Başarı bildirimi
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı!',
                                text: 'Ayar başarıyla güncellendi.',
                                timer: 1500,
                                showConfirmButton: false
                            });
                        }
                    },
                    error: function() {
                        // Hata durumunda geri al
                        $(this).prop('checked', !isActive);
                        statusText.text(!isActive ? 'Aktif' : 'Pasif');
                        
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Ayar güncellenirken bir hata oluştu.'
                        });
                    }
                });
            });
        });
    </script>

</body>

</html>
