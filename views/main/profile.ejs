<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="utf-8">
  <title>Ana Sayfa | Boltas Portal</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
  <meta content="Coderthemes" name="author">

  <%- include("partials/css") %>

</head>

<body class="loading" data-layout-color="light" data-layout="topnav" data-layout-mode="fluid"
  data-rightbar-onstart="true">
  <!-- Begin page -->
  <div class="wrapper">

    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->

    <div class="content-page">
      <div class="content">
        <!-- Topbar Start -->
        <%- include("partials/topbar") %>
          <!-- end Topbar -->

          <%- include("partials/topnav") %>


            <!-- Start Content-->
            <div class="container-fluid">

              <!-- start page title -->
              <div class="row">
                <div class="col-12">
                  <div class="page-title-box">
                    <h4 class="page-title">Profilim</h4>
                  </div>
                </div>
              </div>
              <!-- end page title -->

              <div class="row" style="align-items: center; justify-content: center; text-align: center;">
                <div class="col-xl-6 col-lg-7">
                  <div class="card text-center">
                    <div class="card-body">
                      <img src="uploads/pphotos/<%= user.EMail %>.png" class="rounded-circle avatar-xl img-thumbnail"
                        alt="profile-image">

                      <h4 class="mb-0 mt-2 font-18"> <%= user.displayName?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></h4>
                      <p class="text-muted font-18"><%= user.Unvan?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></p>
                                      <div class="text-start mt-3">
                                          <p class="text-muted mb-2 font-14"><strong>Email :</strong> <span class="ms-2 "><%= user.EMail %></span></p>
                                          <p class="text-muted mb-2 font-14">
                                            <strong>Doğum Tarihi :</strong> 
                                            <span class="ms-2">
                                              <%= new Date(user.DogumTarihi).toLocaleDateString('tr-TR') %>
                                            </span>
                                          </p>
                                          <p class="text-muted mb-2 font-14"><strong>Yaka Rengi :</strong> <span class="ms-2 "><%= user.YakaRengi?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14">
                                            <strong>İşe Başlama Tarihi :</strong> 
                                            <span class="ms-2">
                                              <%= new Date(user.IsYeriGirisTarihi).toLocaleDateString('tr-TR') %>
                                            </span>
                                          </p>
                                          <p class="text-muted mb-2 font-14"><strong>Organizasyon :</strong> <span class="ms-2 "><%= user.Organizasyon?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Departman :</strong> <span class="ms-2 "><%= user.Departman?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Ünvan Grubu :</strong> <span class="ms-2 "><%= user.UnvanGrubu?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Ünvan :</strong> <span class="ms-2 "><%= user.Unvan?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>İş Yeri :</strong> <span class="ms-2 "><%= user.IsyeriKisaAdi?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Bağlı Olduğu Yönetici :</strong> <span class="ms-2 "><%= user.RaporlandigiYonetici?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Bağlı Olduğu Yönetici E Mail:</strong> <span class="ms-2 "><%= user.RaporlandigiYoneticiEMail %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Üst Organizasyon:</strong> <span class="ms-2 "><%= user.UstOrganizasyon?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Öğrenim Seviyesi:</strong> <span class="ms-2 "><%= user.OgrenimSeviyesi?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>
                                          <p class="text-muted mb-2 font-14"><strong>Lokasyon:</strong> <span class="ms-2 "><%= user.LOKASYON?.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></span></p>

                                      </div>
                                  </div> <!-- end card-body -->
                              </div> <!-- end card -->

                          </div> <!-- end col-->
                      </div>
                      <!-- end row-->

                  </div>
                  <!-- container -->

                </div>
                <!-- content -->

                <!-- Footer Start -->
                <%- include("partials/footer") %>
                <!-- end Footer -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

       

        <%- include("partials/scripts") %>

    </body>
</html>